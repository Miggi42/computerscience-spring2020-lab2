#include<iostream>
using namespace std;
int main()
{
  int width;
  int length;
  int result;

  cout<<"Please enter the width of the rectangle"<<endl;
  cin>>width;
  result = width;
  cout<<"Please enter the length of the rectangle"<<endl;
  cin>>length;
  result = length;
  cout<<"The perimeter of the rectangle is "<<(length*2) + (width*2)<<endl;
  cout<<"The area of the rectangle is "<<length*width<<endl;
}
